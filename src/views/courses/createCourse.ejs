<%- include('../partials/head') %>
<%- include('../partials/header') %>

<body class = body-form>

    <h1 class="formTitle">Crear curso</h1>

    <form action="/courses/create-course" method="POST" name="formCreateCourse">
        <div class="divSelectCompany">
            <select name="selectCompany" class="SelectCompany">
                <option value="default" selected>--Seleccione una institución--</option>
                <% companies.forEach(company => { %>
                    <option value="<%= company.company_name %>"><%= company.company_name %></option>
                <% }) %>
            </select>
        </div>
        <div class="divInputCreateCourse">
            <label for="inputCourseName" class="labelForm">Nombre del curso</label>
            <input type="text" name="inputCourseName" class="inputCreateCourse">
        </div>
        <div class="divInputCreateCourse">
            <label for="inputCourseDescription" class="labelForm">Descripción</label>
            <input type="text" name="inputCourseDescription" class="inputCreateCourse">
        </div>
        <div>
            <% simulators.forEach(simulator => { %>
                <input type="checkbox" name="<%= simulator.dataValues.id%>" value="<%= simulator.dataValues.simulator_name%>">
                <label for="html"><%= simulator.dataValues.simulator_name%></label><br>
            <% }) %>
        </div>
        <div class="divButtonsCreateCourse">
            <input type="submit" value="Crear" class="buttonForm btnCreateCourse">
            <input type="reset" value="Cancelar" class="buttonForm btnCreateCourse">
        </div>

    </form>
</body>

<%- include('../partials/footer') %>