<%- include('../partials/head') %>
<%- include('../partials/header') %>

<% if (locals.alertMessage) { %>
    <div class="alertMessage">
        <i class="fa-solid fa-exclamation"></i>
        <p><%= alertMessage%></p>
    </div>
<% } %>

<h3 class="title1">Cambiar contraseña</h3>

<form action="/users/change-password" method="POST" name="formChangePassword" class="form1" >

    <div>
        <input type="text" name="email" placeholder="" class="input1" value="<%= oldData.email %>" blocked>
        <div class="divError1"></div>
    </div>

    <div class="divCss1">
        <input type="text" name="password" placeholder="Contraseña" class="input1 <%= locals.errors && errors.password ? 'isInvalid' : null %>" >
        <div class="divError1">
            <% if (locals.errors && errors.password) { %>
                <%= errors.password.msg %> 
            <% } %>
        </div>
    </div>

    <div class="divCss1">
        <input type="text" name="confirmPassword" placeholder="Reingrese contraseña" class="input1 <%= locals.errors && errors.confirmPassword ? 'isInvalid' : null %>" >
        <div class="divError1">
            <% if (locals.errors && errors.confirmPassword) { %>
                <%= errors.confirmPassword.msg %> 
            <% } %>
        </div>
    </div>

    <div class="divCss1">
        <button type="submit" class="button1">Guardar</button>
    </div>
</form>

<%- include('../partials/footer') %>